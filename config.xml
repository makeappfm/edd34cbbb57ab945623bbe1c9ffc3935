<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.belplay.app"
        versionCode = "10"
        version     = "1.0.0">

    <name>Bel Play</name>

    <description>
        A BELNET disponibiliza a todos os seus clientes o aplicativo Bel Play VOD. O novo serviço visa proporcionar acesso a conteúdos adultos e infantis, além de milhares de filmes e séries online a qualquer momento e em qualquer lugar. 
    </description>

    <author>Tadapp</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <gap:plugin name='onesignal-cordova-plugin' spec='2.4.5' source='npm' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name='orientation' value='portrait' />

    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashScreenSpinnerColor" value="#ffffff" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon src="res/android/icon/ldpi_1610457545_f95d0028e78e5711b71e.png" density="ldpi" />
        <icon src="res/android/icon/mdpi_1610457545_f95d0028e78e5711b71e.png" density="mdpi" />
        <icon src="res/android/icon/hdpi_1610457545_f95d0028e78e5711b71e.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi_1610457545_f95d0028e78e5711b71e.png" density="xhdpi" />
        <icon src="res/android/icon/xxhdpi_1610457545_f95d0028e78e5711b71e.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi_1610457545_f95d0028e78e5711b71e.png" density="xxxhdpi" />

        <splash src="res/android/screen/hdpi_port_1610457621_f1a5a684ff5beed2173b.png" density="port-hdpi"/>
        <splash src="res/android/screen/ldpi_port_1610457621_f1a5a684ff5beed2173b.png" density="port-ldpi"/>
        <splash src="res/android/screen/mdpi_port_1610457621_f1a5a684ff5beed2173b.png" density="port-mdpi"/>
        <splash src="res/android/screen/xhdpi_port_1610457621_f1a5a684ff5beed2173b.png" density="port-xhdpi"/>
        <splash src="res/android/screen/hdpi_land_1610457621_f1a5a684ff5beed2173b.png" density="land-hdpi"/>
        <splash src="res/android/screen/ldpi_land_1610457621_f1a5a684ff5beed2173b.png" density="land-ldpi"/>
        <splash src="res/android/screen/mdpi_land_1610457621_f1a5a684ff5beed2173b.png" density="land-mdpi"/>
        <splash src="res/android/screen/xhdpi_land_1610457621_f1a5a684ff5beed2173b.png" density="land-xhdpi"/>
    </platform>

    <access origin='*'/>
    <plugin name='cordova-plugin-whitelist' />
    <allow-intent href='http://*/*'/>
    <allow-intent href='https://*/*'/>
    <allow-intent href='tel:*'/>
    <allow-intent href='sms:*'/>
    <allow-intent href='mailto:*'/>
    <allow-intent href='geo:*'/>

</widget>